@model Item

<h1>@Model.Name</h1>

<div class="img-thumbnail">
    <img alt="@Model.Name" src="@Model.ItemImageUrl" />
    <div class="caption-full">
        <h3 class="float-right">@Model.Price</h3>
        <h3><a href="#">@Model.Name</a></h3>
        <p>@Model.Description</p>
    </div>
    <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-itemId="@Model.ItemId">
                    Add to cart
                </a>
            </p>
     </div>
</div>