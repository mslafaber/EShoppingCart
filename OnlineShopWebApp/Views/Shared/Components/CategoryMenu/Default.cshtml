@model IEnumerable<Category>

<li class="dropdown">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Categories<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Item" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Item" asp-action="List" asp-route-category="">View All Items</a>
        </li>
    </ul>
</li>