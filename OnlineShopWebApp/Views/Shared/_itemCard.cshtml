@model Item

<div class="col-md-4" style="border: 2px solid black;">
    <img class="img-thumbnail embed-responsive-item" src="@Model.ItemImageThumbnailUrl" alt="image for online shop" />
    <div class="caption">
        <h3 class="float-right">@Model.Price.ToString("c")</h3>
        <h3><a asp-controller="Item" asp-action="Details" asp-route-id="@Model.ItemId">@Model.Name</a></h3>
        <p>@Model.Description</p>
    </div>
</div>