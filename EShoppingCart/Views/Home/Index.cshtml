@model HomeViewModel

<!--await will render the carousel and in case the slider images take time to load the whole applicatio  will be kept and when its ready it will be shown-->
@await Html.PartialAsync("Carousel")

<h2>Prefered items of the week </h2>
<h4>Clients preferences - just for you!</h4>

<div class="row">
    @foreach (var item in Model.PreferredItems)
    {
        @Html.Partial("ItemsSummary", item)
    }
</div>