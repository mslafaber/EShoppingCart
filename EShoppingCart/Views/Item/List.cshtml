@using EShoppingCart.ViewModels
@model ItemListViewModel

<div>
    <h2>
        All Drinks are shown here
    </h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{
    foreach (var item in Model.Items)
    {
        <div>
            <h4>Item Name : @item.Name</h4>
            <p>Price : @item.Price.ToString("c")</p>
        </div>
    }
 }