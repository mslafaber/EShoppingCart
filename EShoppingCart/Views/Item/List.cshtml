<div>
    <h2>
        All Drinks are shown here
    </h2>
</div>

<h2>@Model.CurrentCategory</h2>

<div class="container">
    <div class="row">

        @{
            foreach (var item in Model.Items)
            {
                <div class="col-md-4">
                    <img class="img-thumbnail embed-responsive-item" src="@item.ItemImageThumbnailUrl" alt="" />
                    <div class="caption">
                        <h3 class="pull-right">
                            @item.Price.ToString("c")
                        </h3>
                        <h3>
                            <a>@item.Name</a>
                        </h3>
                        <p>@item.ItemDescription</p>
                    </div>
                </div>
            }
        }
    </div>
</div>
